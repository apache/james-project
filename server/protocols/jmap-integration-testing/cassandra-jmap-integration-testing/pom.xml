        </dependency>
        <dependency>
            <groupId>${james.groupId}</groupId>
            <artifactId>blob-objectstorage</artifactId>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>${james.groupId}</groupId>
            <artifactId>blob-objectstorage-guice</artifactId>
